{
  "name": "taller-lectura-devops",
  "version": "1.0.0",
  "description": "Proyecto DevOps: Sitio web estático del Taller de Lectura con TDD, SOLID, Docker y CI/CD",
  "main": "src/index.html",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "lint": "eslint src/**/*.js tests/**/*.js",
    "lint:fix": "eslint src/**/*.js tests/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.{js,css,html}\" \"tests/**/*.js\"",
    "serve": "npx serve src -p 3000",
    "build": "echo 'Static site - no build needed'",
    "docker:build": "docker build -t taller-lectura:latest -f docker/Dockerfile .",
    "docker:run": "docker run -d -p 3000:80 --name taller-lectura taller-lectura:latest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TU_USUARIO/taller-lectura-devops.git"
  },
  "keywords": [
    "devops",
    "tdd",
    "docker",
    "jenkins",
    "gcp",
    "ci-cd",
    "static-site"
  ],
  "author": "Carlos Sánchez <salinas_carlos@ciencias.unam.mx>",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.7.4"
  }
}
